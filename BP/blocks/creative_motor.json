{
    "format_version": "1.20.40",
    "minecraft:block": {
        "description": {
            "identifier": "create:creative_motor",
            "menu_category": {
                "category": "items"
            },
            "states": {
                "create:placed": [false,true],
                "create:placing_direction": [2,0,1,3,4,5]
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('create:placing_direction') == 0",
                "components": {"minecraft:transformation": {"rotation": [-90, 0, 0]}, "tag:create:direction_up": {}}
            },
            {
                "condition": "query.block_state('create:placing_direction') == 1",
                "components": {"minecraft:transformation": {"rotation": [90, 0, 0]}, "tag:create:direction_down": {}}
            },
            {
                "condition": "query.block_state('create:placing_direction') == 2",
                "components": {"minecraft:transformation": {"rotation": [0, 0, 0]}, "tag:create:direction_south": {}}
            },
            {
                "condition": "query.block_state('create:placing_direction') == 3",
                "components": {"minecraft:transformation": {"rotation": [0, 180, 0]}, "tag:create:direction_north": {}}
            },
            {
                "condition": "query.block_state('create:placing_direction') == 4",
                "components": {"minecraft:transformation": {"rotation": [0, 90, 0]}, "tag:create:direction_east": {}}
            },
            {
                "condition": "query.block_state('create:placing_direction') == 5",
                "components": {"minecraft:transformation": {"rotation": [0, -90, 0]}, "tag:create:direction_west": {}}
            }
        ],
        "components": {
            "minecraft:destructible_by_mining": {"seconds_to_destroy": 8},
            "minecraft:geometry": {
                "identifier": "geometry.creative_motor",
                "bone_visibility": {
                    "y_axis": "query.block_state('create:placing_direction') < 2",
                    "base": "query.block_state('create:placing_direction') > 1",
                    "shaft": "!query.block_state('create:placed')"
                }
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "creative_casing",
                    "render_method": "alpha_test"
                },
                "creative_motor": {
                    "texture": "creative_motor",
                    "render_method": "alpha_test"
                },
                "creative_motor_base": {
                    "texture": "creative_motor_base",
                    "render_method": "alpha_test"
                },
                "axis": {
                    "texture": "axis",
                    "render_method": "alpha_test"
                },
                "creative_motor_extra": {
                    "texture": "creative_motor_extra",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:collision_box": {
                "origin": [-5, 3, -8],
                "size": [10, 10, 14]
            },
            "minecraft:selection_box": {
                "origin": [-5, 3, -8],
                "size": [10, 10, 14]
            },
            "minecraft:on_player_placing": {
                "event": "on_player_placed"
            }
        },
        "events": {
            "on_player_placed": {
                "set_block_state": {
                    "create:placing_direction": "query.cardinal_facing",
                    "create:placed": true
                }
            }
        }
    }
}