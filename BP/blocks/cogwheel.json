{
	"format_version": "1.20.40",
	"minecraft:block": {
		"description": {
			"identifier": "create:cogwheel",
			"menu_category": {
                "category": "items"
            },
			"states": {
				"create:placed": [false,true],
				"create:placing_axis":[0,1,2]
			}
		},
		"permutations": [
			{
				"condition": "query.block_state('create:placing_axis') == 0 ",
				"components": {"tag:axis:y": {}}
			},
			{
				"condition": "query.block_state('create:placing_axis') == 1",
				"components": {"tag:axis:z": {},"minecraft:transformation": {"rotation": [90,0,0]}}
			},
			{
				"condition": "query.block_state('create:placing_axis') == 2",
				"components": {"tag:axis:x": {},"minecraft:transformation": {"rotation": [90,90,0]}}
			},
			{
				"condition": "query.block_state('create:placed')",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "stripped_spruce_log_top",
							"render_method": "alpha_test"
						},
				        "cogwheel": {
					        "texture": "invisible",
					        "render_method": "alpha_test"
				        }
			        }
				}
			}
		],
		"components": {
			"minecraft:custom_components": ["create:tile_entity"],
			"minecraft:material_instances": {
				"*": {
					"texture": "cogwheel",
					"render_method": "opaque"
				}
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 6
			},
			"minecraft:on_placed": {"event": "create:on_placed"},
			"tag:stone": {},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 8},
			"minecraft:geometry": {
				"identifier": "geometry.cogwheel",
				"bone_visibility": {
					"main": "!query.block_state('create:placed')",
					"placed": "query.block_state('create:placed')"
				}
			},
			"minecraft:collision_box" : {
				"origin": [-3,0,-3],
				"size": [6,16,6]
			},
			"minecraft:selection_box": {
				"origin": [-2.5,0,-2.5],
				"size": [5,16,5]
			},
			"minecraft:on_player_placing": {
				"event": "create:on_player_placed"
			},
			"minecraft:flammable":false
		},
		"events": {
			"create:on_player_placed":{
				"set_block_state" : {
					"create:placed" : true,
					"create:placing_axis": "math.floor(query.cardinal_facing / 2)"
				}
			},
			"create:on_placed": {
				"set_block_state" : {
					"create:placed" : true
				}
			}
		}
	}
}